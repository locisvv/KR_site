<div class="content">
    <div class="w-row">
      <% @posts.each do |post| %>
        <div class="w-col w-col-3">
          <div class="news_bloc">
            <div class="img_news" style="background-image: url(<%= Photo.get(post.header_photo).large %>);"></div>
            <div class="text_bloc">
              <h4><%= post.title %></h4>
              <p><%= post.subtext %></p>
              <div class="news_data">
                <%= Time.at(post.created_at).strftime("%d-%m-%Y %H:%M")%>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="w-row">
      <div class="w-col w-col-6">
        <div class="event">
          <h1>Alkalmaink</h1>
        </div>
      </div>
      <div class="w-col w-col-6">
        <div class="event">
          <h1>Hirdetesek</h1>
        </div>
      </div>
    </div>
  </div>