<% user = User.get(@comment.user_id)%>
<div class="photo" style='background-image: url("/photo/small/<%= user.photo_name %>");'></div>
<div class="triangle"></div>
<div class="comment_content">
	<p class="comment_text"><%= @comment.text %></p>
	<p class="comment_date"><%= "<b>" + user.name + "</b> " + Time.at(@comment.created_at).strftime("%k:%M %d-%m-%Y") %></p>
</div>